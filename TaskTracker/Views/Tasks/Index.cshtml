@model IEnumerable<TaskTracker.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
    var search = Context.Request.Query["search"].ToString();
}

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Task List</h2>
        <a asp-action="Create" class="btn btn-success">+ Add Task</a>
    </div>

    <!-- Search Form -->
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" value="@search" class="form-control" placeholder="Search by title..." />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>

    <!-- Task Table -->
    @if (!Model.Any())
    {
        <div class="alert alert-info">No tasks found.</div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Where(t => string.IsNullOrEmpty(search) || t.Title.Contains(search, StringComparison.OrdinalIgnoreCase)))
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>
                            <span class="badge @((task.IsCompleted ? "bg-success" : "bg-secondary"))">
                                @(task.IsCompleted ? "Completed" : "Incomplete")
                            </span>
                        </td>
                        <td>@task.CreatedAt.ToString("g")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Delete</a>
                            <a asp-action="ToggleComplete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-secondary">
                                @(task.IsCompleted ? "Unmark" : "Complete")
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
